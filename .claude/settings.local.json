{
  "permissions": {
    "allow": [
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(rm:*)",
      "Bash(cp:*)",
      "Bash(python3:*)",
      "mcp__web-search-prime__webSearchPrime",
      "WebSearch",
      "mcp__web-reader__webReader",
      "Skill(deep-research-skill)",
      "Skill(research-executor)",
      "Bash(find:*)",
      "Bash(npm run build:*)",
      "Bash(node test-tools.js:*)",
      "Bash(test:*)",
      "Bash(wc:*)",
      "Bash(for agent in /Users/yeheng/workspaces/research/template/.claude/agents/*/AGENT.md:*)",
      "Bash(done:*)",
      "Bash(grep:*)",
      "Bash(for:*)",
      "Bash(npm test:*)",
      "Bash(tree:*)",
      "Bash(node:*)",
      "Bash(sqlite3:*)",
      "Bash(chmod:*)",
      "Bash(npm install:*)",
      "Bash(:*::*)",
      "Bash(timeout:*)",
      "Bash(/usr/bin/du:*)",
      "Bash(npm ls:*)",
      "Bash(npm pkg get:*)",
      "Bash(do basename:*)",
      "Bash(xargs:*)",
      "mcp__deep-research__register_agent",
      "mcp__deep-research__create_research_session",
      "mcp__deep-research__update_session_status"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "mcp__deep-research__.*",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/auto-logger.js"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/restore-context.js"
          }
        ]
      }
    ]
  },
  "outputStyle": "Structural Thinking",
  "research": {
    "default_output_dir": "RESEARCH",
    "max_agents": 8,
    "default_quality_threshold": 8,
    "citation_style": "inline-with-url"
  }
}
