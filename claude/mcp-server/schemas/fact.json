{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fact Extraction Schema",
  "description": "Schema for atomic fact extraction with source attribution",
  "definitions": {
    "SourceObject": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        },
        "title": {
          "type": "string"
        },
        "author": {
          "type": "string"
        },
        "date": {
          "type": "string"
        },
        "quality": {
          "type": "string",
          "enum": ["A", "B", "C", "D", "E"]
        }
      }
    },
    "FactObject": {
      "type": "object",
      "required": ["entity", "attribute", "value", "value_type", "confidence", "source"],
      "properties": {
        "entity": {
          "type": "string",
          "description": "The entity this fact is about"
        },
        "attribute": {
          "type": "string",
          "description": "The attribute being described"
        },
        "value": {
          "type": "string",
          "description": "The value of the attribute"
        },
        "value_type": {
          "type": "string",
          "enum": ["number", "date", "percentage", "currency", "text"]
        },
        "confidence": {
          "type": "string",
          "enum": ["High", "Medium", "Low"]
        },
        "source": {
          "$ref": "#/definitions/SourceObject"
        }
      }
    }
  }
}
