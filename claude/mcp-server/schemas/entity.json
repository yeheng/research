{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Entity Extraction Schema",
  "description": "Schema for named entity and relationship extraction",
  "definitions": {
    "EntityObject": {
      "type": "object",
      "required": ["name", "type"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Entity name"
        },
        "type": {
          "type": "string",
          "description": "Entity type (company, person, technology, product, market)"
        },
        "aliases": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "description": {
          "type": "string"
        }
      }
    },
    "EdgeObject": {
      "type": "object",
      "required": ["source", "target", "relation"],
      "properties": {
        "source": {
          "type": "string"
        },
        "target": {
          "type": "string"
        },
        "relation": {
          "type": "string"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "evidence": {
          "type": "string"
        }
      }
    }
  }
}
